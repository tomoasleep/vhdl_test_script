#!/bin/sh -e

cd #{@dir}
ghdl -a --ieee=synopsys -fexplicit --warn-default-binding --warn-binding --warn-library \
  --warn-body --warn-specs --warn-unused  <%= dependencies.join(" ") %> \
  <%= @dut_path %> <%= @test_file.path %>
ghdl -e -Plibs/unisim --ieee=synopsys -fexplicit <%= @test_file.test_name %>
ghdl -r <%= @test_file.test_name %> --vcd=out.vcd --stop-time=10ms
